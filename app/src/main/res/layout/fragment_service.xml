<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmenthost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerVertical="true"

    tools:context=".Service_Fragment">



    <Button
        android:id="@+id/infoService_btn"
        android:text="รู้จักหลักประกันสุขภาพถ้วนหน้า"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/textframe_dark_bule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/checkPrivilege_btn"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="ตรวจสอบสิทธิ์หลักประกันสุขภาพถ้วนหน้า"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textframe_dark_bule"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/hospitalInSystem_btn"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="โรงพยาบาลในระบบหลักประกันสุขภาพถ้วนหน้า"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textframe_dark_bule"
        android:textSize="30sp"/>


</LinearLayout>