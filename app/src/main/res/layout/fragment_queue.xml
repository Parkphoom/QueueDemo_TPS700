<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QueueFragment">

    <TextView
        android:id="@+id/TypeofQueue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/hintQueue1"
        app:layout_constraintEnd_toEndOf="@id/hintQueue1"
        app:layout_constraintStart_toStartOf="@+id/hintQueue1" />

    <TextView
        android:id="@+id/hintQueue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/TextQueue"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/textQueue"
        app:layout_constraintEnd_toEndOf="@+id/textQueue"
        app:layout_constraintStart_toStartOf="@+id/textQueue" />

    <TextView
        android:id="@+id/textQueue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textQueueRemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="จำนวนคิวที่รอ"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/textQueue"
        app:layout_constraintStart_toStartOf="@+id/textQueue"
        app:layout_constraintTop_toBottomOf="@+id/textQueue" />

    <ImageView
        android:id="@+id/imgque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/printbtn"
        app:layout_constraintEnd_toEndOf="@+id/textQueueRemain"
        app:layout_constraintStart_toStartOf="@+id/textQueueRemain"
        app:layout_constraintTop_toBottomOf="@+id/textQueueRemain" />

    <Button
        android:id="@+id/printbtn"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textframe_dark_bule"
        android:text="@string/PrintButton"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>